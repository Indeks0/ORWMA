<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Splatoon2DetailsActivity"
    android:background="@color/colorBackground">

    <com.google.android.youtube.player.YouTubePlayerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/youtubeViewSplatoon2">
    </com.google.android.youtube.player.YouTubePlayerView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPlaySplatoon2"
        android:text="Play"
        android:layout_below="@+id/youtubeViewSplatoon2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPlaySplatoon2"
        android:text="@string/Splatoon2PageDesc"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"/>
</RelativeLayout>